<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kusuma20.renting.RentalBooking"
    tools:showIn="@layout/activity_rental_booking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
android:hint="Pick Your Date"
            android:id="@+id/datepic"
            android:layout_weight="1.5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_date_range_black_24dp"
            android:layout_marginRight="5dp"
            android:id="@+id/bdatepic"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
android:hint="Pick Your Time"
            android:id="@+id/timepic"
            android:layout_weight="1.5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_alarm_black_24dp"
            android:id="@+id/btimepic"
            />
    </LinearLayout>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:maxLines="4"
    android:hint="Enter Description"
    android:id="@+id/description"/>
