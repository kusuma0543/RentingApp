<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kusuma20.renting.Third"
    tools:showIn="@layout/activity_third">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:background="#9ad98b"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
app:cardElevation="5dp"
            android:layout_width="330dp"
            android:layout_marginTop="25dp"
            android:layout_height="475dp"
         app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            android:id="@+id/card">
       <LinearLayout
           android:layout_width="330dp"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:weightSum="2">
           <TextView
               android:layout_width="140dp"
               android:layout_height="match_parent"
            android:text="Budget"
               android:gravity="center"
               android:textStyle="bold"
               android:textColor="#0b0a4b"
               android:textSize="23dp"
               android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="180dp"

                android:layout_height="50dp"
                android:orientation="vertical"
                android:weightSum="2">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="40dp"
           android:gravity="end"
              android:textSize="19sp"

              android:layout_marginRight="19dp"
              android:text="Code"

              android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/code"
                    android:gravity="end"

                    android:layout_marginRight="20dp"
                    android:textColor="#e25140"
                    android:layout_weight="1"/>
                </LinearLayout>
       </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="43dp"
                android:background="#bcb8b8" />
            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="45dp"
                android:weightSum="2">
            <LinearLayout
                android:layout_width="160dp"

                android:layout_height="90dp"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:textSize="13sp"
                    android:id="@+id/type"
                    android:layout_weight="1"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="150dp"
                    android:id="@+id/imgvg"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="195dp"
                android:background="#bcb8b8" />
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="105dp"
                android:orientation="horizontal"
                android:layout_marginTop="199dp"
                android:weightSum="2">
            <LinearLayout
                android:layout_width="160dp"

                android:layout_height="130dp"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:textColor="#547b23"
                    android:text="Pick up"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:paddingLeft="18dp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/pickup"
android:layout_gravity="center"
android:layout_marginLeft="12dp"
                    android:textSize="12dp"
             android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"

                    android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="170dp"

                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:textColor="#547b23"
                        android:textStyle="bold"
                        android:text="Return"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="18dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:id="@+id/creturn"
                        android:textSize="12dp"

                        android:layout_gravity="center"
android:layout_marginRight="7dp"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="314dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="180dp"

                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="18dp"
                        android:paddingTop="5dp"
                        android:text="SUMMARY"
                        android:textColor="#000"

                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"

                        android:paddingLeft="18dp"
                        android:text="Include Fees and Taxes" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="13dp"

                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="Total:"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="19dp"
                        android:id="@+id/costdiscount"
                        android:layout_weight="1"
                        android:gravity="start"

                        android:textColor="#5fb34b"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/rent"
                android:layout_marginTop="417dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounds"
                android:text="Rent"
                android:textColor="#FFF"
                android:layout_marginBottom="19dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
              />
        </android.support.v7.widget.CardView>

    </LinearLayout>


    </LinearLayout>

    </ScrollView>
</LinearLayout>
